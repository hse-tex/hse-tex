\ProvidesPackage{packages}

% Языковые пакеты и различные кодировки
\RequirePackage[T2A]{fontenc}
\RequirePackage[utf8]{inputenc}
\RequirePackage[english, russian]{babel}

% Базовые математические пакеты
\RequirePackage{mathtools}
\RequirePackage{amsfonts}
\RequirePackage{amssymb}
\RequirePackage{amsthm}    % Теоремки 
\RequirePackage{cases}     % Нормальная работа с системами уравнений
\RequirePackage{physics}   % Разного рода операторы дифференциального исчисления

% Ссылки мои ссылки
\RequirePackage[unicode=true, colorlinks=true, linkcolor=blue, urlcolor=blue]{hyperref}

% Показывать номера только у уравнений, на которые есть ссылки
\mathtoolsset{showonlyrefs=true}

% Внешний вид файла
\RequirePackage[a4paper, left=1.5cm, right=1.5cm, top=1cm, bottom=2cm]{geometry}
\RequirePackage{fancyhdr}
\RequirePackage{multicol}

% Различные пакеты для набора текста и формул
\RequirePackage{csquotes}  % Нормальные кавычки
\RequirePackage{cancel}    % Зачеркивание любых символов
\RequirePackage{graphicx}  % Люблю графики и все что с ними связано
\RequirePackage{icomma}    % Нормальная запятая в математическом режиме

% Алгоритмы
\RequirePackage{listings}  % Сниппеты с кодом
\RequirePackage{xcolor}    % Цветной текст для подсветки синтаксиса

% figures и subfigures для графиков
\RequirePackage{caption}
\RequirePackage{subcaption}
